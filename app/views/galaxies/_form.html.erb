<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :life %>
<%= f.check_box :life %>

<%= f.label :classification%>
<%= f.select :classification, ['Elliptical', 'Spiral', 'Irregular'] %>

<%= f.label :color %>
<%= f.text_field :color %>

<%= f.collection_select :id, Galaxy.all, :id, :name, {include_blank: true} %>

<%= hidden_field(:galaxy, :observation_id, :value => @observation ? @observation.id : params[:observation_id]) %>

<%= f.submit %>