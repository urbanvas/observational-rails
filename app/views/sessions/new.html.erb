<h1>Welcome to AstroRails</h1>
<% if flash[:notice] %>
    <h3><%= flash[:notice] %></h3>
<% end %>
<%= form_tag ({controller: 'sessions', action: 'create', method: 'post'}) do %>
    <%= label_tag 'username' %>
    <%= text_field_tag :username %>
    <br>
    <%= label_tag 'password' %>
    <%= password_field_tag :password %>
    <br>
    <%= submit_tag "Login" %>
<% end %>
<%= link_to "Hello New Astronomer click ME to Create Account", new_user_path %>
<br>
<%= link_to "Login via Github", "/auth/github" %>
<br>