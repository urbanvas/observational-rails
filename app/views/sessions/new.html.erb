<h1>Welcome to AstroRails</h1>
<% if @error %>
    <h3><%= @error %></h3>
<% end %>
<%= form_tag ({controller: 'sessions', action: 'create', method: 'post'}) do %>
    <%= label_tag 'username' %>
    <%= text_field_tag :username %>
    <br>
    <%= label_tag 'password' %>
    <%= text_field_tag :password %>
    <br>
    <%= submit_tag "Login" %>
<% end %>
<%= link_to "Login via Github", "/auth/github" %>
<br>